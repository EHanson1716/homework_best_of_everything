<div class="page-header">
  <h1>Edit Dish #<%= @dish.id %></h1>
</div>

<form action="/update_dish/<%= @dish.id %>" class="form-horizontal">
  <!-- Label and input for name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @dish.name %>">
    </div>
  </div>

  <!-- Label and input for cuisine -->
  <div class="form-group">
    <label for="cuisine" class="col-sm-2 control-label">
      Cuisine
    </label>
    <div class="col-sm-10">
      <input type="text" id="cuisine" name="cuisine" placeholder="Cuisine" class="form-control" value="<%= @dish.cuisine %>">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Update Dish" class="btn btn-primary">
    </div>
  </div>
</form>
